<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Splash" parent="android:Theme.DeviceDefault.Light.NoActionBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Login" parent="android:Theme.DeviceDefault.Light.NoActionBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
